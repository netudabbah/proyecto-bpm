# Puerto del servidor
PORT=3000

# Base de datos PostgreSQL (Supabase)
DB_HOST=your-supabase-host.pooler.supabase.com
DB_PORT=6543
DB_USER=postgres.xxxxx
DB_PASSWORD=your-password
DB_NAME=postgres

# Supabase
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google Cloud Vision (para OCR)
# En desarrollo: ruta al archivo JSON
GOOGLE_APPLICATION_CREDENTIALS=./google-vision-key.json
# En producción (Railway): contenido JSON como string
# GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}

# Tiendanube
TIENDANUBE_STORE_ID=your-store-id
TIENDANUBE_ACCESS_TOKEN=your-access-token
TIENDANUBE_APP_ID=your-app-id
TIENDANUBE_CLIENT_SECRET=your-client-secret

# Botmaker (WhatsApp)
BOTMAKER_ACCESS_TOKEN=your-botmaker-token
BOTMAKER_CHANNEL_ID=your-channel-id

# Frontend URL (para CORS en producción)
FRONTEND_URL=https://petlovearg.com
